<Window x:Class="BCSH2_RPG_Generator.Views.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RPG Generátor Postav"
        Width="500" Height="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman"
        FontSize="14"
        Foreground="#D4AF37">

    <Window.Background>
        <SolidColorBrush Color="#1A0E07"/>
    </Window.Background>


    <Grid Margin="20">
        <Border CornerRadius="10"
                BorderBrush="#4B2A10" BorderThickness="2"
                Background="#2A160A" Padding="5">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Generátor RPG Postav"
                           FontSize="22"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="#FFD479"/>

                <Button Content="Hry"
                        Width="200" Height="45"
                        FontWeight="Bold"
                        Click="OtevriHry_Click"/>

                <Button Content="Povolání"
                        Width="200" Height="45"
                        FontWeight="Bold"
                        Click="OtevriPovolani_Click"/>

                <Button Content="Schopnosti"
                        Width="200" Height="45"
                        FontWeight="Bold"
                        Click="OtevriSchopnosti_Click"/>

                <Button Content="Rasy"
                        Width="200" Height="45"
                        FontWeight="Bold"
                        Click="OtevriRasy_Click"/>

                <Button Content="⏻ Konec"
                        Width="200" Height="40"
                        Margin="0,15,0,0"
                        Background="#3A1C0C"
                        Foreground="#FFD479"
                        BorderThickness="0"
                        Click="Konec_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
