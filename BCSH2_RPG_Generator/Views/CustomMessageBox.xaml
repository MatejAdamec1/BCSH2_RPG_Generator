<Window x:Class="Generator_RPG.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        Background="#1A0E07"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Width="380"
        WindowStartupLocation="CenterScreen">

    <Border BorderBrush="Gold"
            BorderThickness="2"
            CornerRadius="14"
            Background="#1A0E07"
            Padding="20">

        <StackPanel HorizontalAlignment="Center"
                    MaxWidth="380">

            <TextBlock x:Name="TitleText"
                       Text="Zpráva"
                       Foreground="Gold"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0 0 0 10"/>

            <TextBlock x:Name="MessageText"
                       Foreground="Goldenrod"
                       FontSize="17"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="10 0 10 15"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0 5 0 0">

                <Button x:Name="Btn1"
                        Width="110"
                        Margin="6"
                        Click="Btn1_Click"/>

                <Button x:Name="Btn2"
                        Width="110"
                        Margin="6"
                        Visibility="Collapsed"
                        Click="Btn2_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
