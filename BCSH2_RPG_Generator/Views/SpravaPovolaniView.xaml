<Window x:Class="BCSH2_RPG_Generator.Views.SpravaPovolaniView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BCSH2_RPG_Generator.ViewModels"
        Title="Správa Povolání"
        Width="700" Height="540"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman"
        FontSize="13"
        Foreground="#D4AF37">

    <Window.DataContext>
        <vm:SpravaPovolaniViewModel />
    </Window.DataContext>

    <Window.Background>
        <SolidColorBrush Color="#1A0E07"/>
    </Window.Background>


    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2"
                BorderBrush="#4B2A10" BorderThickness="2"
                Background="#2A160A" CornerRadius="4" Margin="0,0,0,10">
            <DataGrid ItemsSource="{Binding PovolaniSeznam}"
                      SelectedItem="{Binding VybranePovolani, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      Background="#0E0702"
                      Foreground="#FFD479"
                      BorderThickness="0"
                      CanUserAddRows="False"
                      CanUserResizeColumns="False"
                      CanUserResizeRows="False"
                      CanUserReorderColumns="False"
                      CanUserSortColumns="False"
                      SelectionMode="Single"
                      AlternatingRowBackground="#1F1207" RowBackground="#FF1F1207">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="IsHitTestVisible" Value="False"/>
                        <Setter Property="Background" Value="#4B2A10"/>
                        <Setter Property="Foreground" Value="#FFD479"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderBrush" Value="#5C3A1E"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Padding" Value="6,4"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Název" Binding="{Binding Nazev}" Width="150"/>
                    <DataGridTextColumn Header="Popis" Binding="{Binding Popis}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,20,0">
            <StackPanel Margin="0,5">
                <TextBlock Text="Název:" FontWeight="Bold" Margin="0,5,0,2"/>
                <TextBox Text="{Binding NovyNazev, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Background="#2A160A" Foreground="#FFD479"
                         BorderBrush="#5C3A1E" Height="28"/>
            </StackPanel>

            <StackPanel Margin="0,5">
                <TextBlock Text="Popis:" FontWeight="Bold" Margin="0,5,0,2"/>
                <TextBox Text="{Binding NovyPopis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Background="#2A160A" Foreground="#FFD479"
                         BorderBrush="#5C3A1E"
                         Height="90" TextWrapping="Wrap"
                         AcceptsReturn="True"/>
            </StackPanel>

            <StackPanel Margin="0,5">
                <TextBlock Text="Obrázek:" FontWeight="Bold" Margin="0,5,0,2"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding ObrazekCesta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Width="180"
                             Background="#2A160A" Foreground="#FFD479"
                             BorderBrush="#5C3A1E" IsReadOnly="True"/>
                    <Button Content="Vybrat"
                            Width="70" Margin="5,0,0,0"
                            Background="#5C3A1E" Foreground="#FFD479"
                            BorderThickness="0"
                            Command="{Binding VybratObrazekCommand}"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Grid.Column="1"
                BorderBrush="#5C3A1E" BorderThickness="3"
                CornerRadius="8" Margin="31,10,0,0">
            <Border.Background>
                <ImageBrush ImageSource="/Assets/PictureBoxPovolaniUnknownbackTemp.png"/>
            </Border.Background>
            <Image Stretch="UniformToFill"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Margin="0"
                   Source="{Binding ObrazekZdroj}"/>
        </Border>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,15,0,0">
            <Button Content="{Binding TextTlacitkoNova}"
                    Width="100" Margin="5"
                    Command="{Binding NovaNeboPridatCommand}"/>

            <Button Content="{Binding TextTlacitkoSmazat}"
                    Width="100" Margin="5"
                    Command="{Binding SmazatNeboZrusitCommand}"/>

            <Button Content="Uložit"
                    Width="100" Margin="5"
                    Command="{Binding UlozitCommand}"/>

            <Button Content="Zpět"
                    Width="100" Margin="5"
                    Command="{Binding ZpetCommand}"/>
        </StackPanel>
    </Grid>
</Window>
