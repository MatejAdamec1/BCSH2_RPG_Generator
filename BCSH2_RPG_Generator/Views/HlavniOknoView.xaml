<Window x:Class="BCSH2_RPG_Generator.Views.HlavniOknoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HlavniOkno"
        Width="750" Height="706"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman"
        FontSize="13"
        Foreground="#D4AF37"
        Background="#1A0E07">



    <Grid Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="14,5,0,0" VerticalAlignment="Top" Height="29">
            <Button Content="Filtrovat" Width="119" Margin="0,0,8,0"
                    Command="{Binding FiltrovatCommand}" Height="29"/>
            <ComboBox Width="131" Height="29"  ItemsSource="{Binding FilterRasa}"
                      SelectedItem="{Binding VybranaRasa}"/>
            <ComboBox Width="131" Height="29" Margin="8,0,0,0"
                      
                      ItemsSource="{Binding FilterPovolani}"
                      SelectedItem="{Binding VybranePovolani}"/>
        </StackPanel>

        <Grid Margin="0,50,0,37">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="440"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderBrush="#4B2A10" BorderThickness="2"
                    Background="#2A160A" CornerRadius="3" Height="545" VerticalAlignment="Top">
                <DataGrid ItemsSource="{Binding Postavy}"
                          SelectedItem="{Binding VybranaPostava}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          IsEnabled="{Binding IsGridEnabled}"
                          HeadersVisibility="Column"
                          Background="#0E0702"
                          Foreground="#FFD479"
                          BorderThickness="0"
                          CanUserAddRows="False"
                          CanUserResizeColumns="False"
                          CanUserResizeRows="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="False"
                          SelectionMode="Single"
                          AlternatingRowBackground="#1F1207" RowBackground="#FF1F1207">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="IsHitTestVisible" Value="False"/>
                            <Setter Property="Background" Value="#4B2A10"/>
                            <Setter Property="Foreground" Value="#FFD479"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="BorderBrush" Value="#5C3A1E"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Padding" Value="6,4"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header = "Jméno" Binding="{Binding Jmeno}" Width="150"/>
                        <DataGridTextColumn Header ="Rasa" Binding="{Binding Rasa}" Width="150"/>
                        <DataGridTextColumn Header ="Povolání" Binding="{Binding Povolani}" Width="135"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Grid Grid.Column="1" Margin="15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="220"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        BorderBrush="#5C3A1E" BorderThickness="3"
                        CornerRadius="5" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Width="200" Height="200" Margin="0,-45,0,0">
                    <Image Source="{Binding VybranaPostava.Obrazek}" Stretch="UniformToFill"/>
                </Border>

                <TextBox Text="{Binding VybranaPostava.Jmeno}" 
                         Background="#0E0702" Foreground="#FFD479"
                         BorderBrush="#5C3A1E" BorderThickness="1" FontSize="22"
                         FontWeight="Bold" TextAlignment="Center"
                         IsReadOnly="True" Margin="0,169,0,26" />

                <TextBox Text="{Binding VybranaPostava.Povolani}"
                         Background="#0E0702" Foreground="#FFD479"
                         BorderBrush="#5C3A1E" BorderThickness="1" FontSize="15"
                         TextAlignment="Center" IsReadOnly="True" Margin="0,201,0,0"/>

                <TextBox Grid.Row="3" Text="{Binding VybranaPostava.Rasa}"
                         Background="#0E0702" Foreground="#FFD479"
                         BorderBrush="#5C3A1E" BorderThickness="1" FontSize="15"
                         TextAlignment="Center" IsReadOnly="True" Margin="0,5,0,10"/>

                <ListBox Grid.Row="3" ItemsSource="{Binding SchopnostiVybranePostavy}"
                         Background="#0E0702" Foreground="#FFD479"
                         BorderBrush="#5C3A1E"
                         BorderThickness="1" Margin="0,34,0,-123" Grid.RowSpan="3"/>

                <DataGrid Grid.Row="5" ItemsSource="{Binding StatyVybranePostavy}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="None"
                          Background="#0E0702" Foreground="#FFD479"
                          BorderBrush="#5C3A1E" BorderThickness="1"
                          IsReadOnly="True" RowHeight="23.8" Margin="0,139,0,-282"
                          SelectionMode="Single"
                          AlternatingRowBackground="#1F1207" RowBackground="#FF1F1207">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Key}" Width="*" />
                        <DataGridTextColumn Binding="{Binding Value}" Width="60" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top" Margin="10,604,10,0" Height="29">
            <Button Content="Přidat postavu" Width="131" Margin="10,0,0,0"
                    Command="{Binding PridatCommand}"/>
            <Button Content="Upravit postavu" Width="131" Margin="10,0,0,0"
                    Command="{Binding UpravitCommand}"/>
            <Button Content="Smazat postavu" Width="131" Margin="10,0,0,0"
                    Command="{Binding SmazatCommand}"/>

            <Button Content="Zpět" Width="100" Margin="162,0,0,0"
                    Command="{Binding ZpetCommand}"/>
        </StackPanel>
    </Grid>
</Window>
