<Window x:Class="BCSH2_RPG_Generator.Views.SpravaHerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BCSH2_RPG_Generator.ViewModels"
        Title="Správa Her"
        Width="806" Height="345"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Times New Roman"
        FontSize="13"
        Foreground="#D4AF37">

    <Window.DataContext>
        <vm:SpravaHerViewModel/>
    </Window.DataContext>

    <Window.Background>
        <SolidColorBrush Color="#1A0E07"/>
    </Window.Background>
    

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                BorderBrush="#4B2A10" BorderThickness="2"
                Background="#2A160A" CornerRadius="4" Margin="0,0,10,0">
            <DataGrid ItemsSource="{Binding Hry}"
                      SelectedItem="{Binding VybranaHra, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      IsEnabled="{Binding IsGridEnabled}"
                      HeadersVisibility="Column"
                      Background="#0E0702"
                      Foreground="#FFD479"
                      BorderThickness="0"
                      CanUserAddRows="False"
                      CanUserResizeColumns="False"
                      CanUserResizeRows="False"
                      CanUserReorderColumns="False"
                      CanUserSortColumns="False"
                      SelectionMode="Single"
                      AlternatingRowBackground="#1F1207" RowBackground="#FF1F1207">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="IsHitTestVisible" Value="False"/>
                        <Setter Property="Background" Value="#4B2A10"/>
                        <Setter Property="Foreground" Value="#FFD479"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderBrush" Value="#5C3A1E"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Padding" Value="6,4"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Název" Binding="{Binding Nazev}" Width="150"/>
                    <DataGridTextColumn Header="Popis" Binding="{Binding Popis}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <StackPanel Margin="0,5">
                <TextBlock Text="Název hry:" FontWeight="Bold" Margin="0,5,0,2"/>
                <TextBox Text="{Binding NovyNazev, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Background="#2A160A" Foreground="#FFD479"
                         BorderBrush="#5C3A1E" Height="28"/>
            </StackPanel>

            <StackPanel Margin="0,5">
                <TextBlock Text="Popis:" FontWeight="Bold" Margin="0,5,0,3"/>
                <TextBox Text="{Binding NovyPopis, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Background="#2A160A" Foreground="#FFD479"
                         BorderBrush="#5C3A1E"
                         Height="63" TextWrapping="Wrap"
                         AcceptsReturn="True"/>
            </StackPanel>

            

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0,50,0,0">
                <Button Content="{Binding TextTlacitkoNova}"
                        Width="100" Margin="5"
                        Command="{Binding NovaNeboPridatCommand}"/>

                <Button Content="{Binding TextTlacitkoSmazat}"
                        Width="100" Margin="5"
                        Command="{Binding SmazatNeboZrusitCommand}"/>

                <Button Content="Uložit"
                        Width="100" Margin="5"
                        Command="{Binding UlozitCommand}"
                        IsEnabled="{Binding MuzeUlozit}"/>

                <Button Content="Zpět"
                        Width="100" Margin="5"
                        Command="{Binding ZpetCommand}"
                        IsEnabled="{Binding MuzeZpet}"/>
            </StackPanel>
            <Button Content="Otevřít Hru"
        Width="150"
        Margin="5,10,0,0"
        HorizontalAlignment="Center"
        Command="{Binding OtevritSlozkuCommand}"/>
        </StackPanel>
    </Grid>
</Window>
